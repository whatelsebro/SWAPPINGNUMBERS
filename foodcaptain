#include<stdio.h>
main()
{
	//1. display the  menu
	printf("pick an item : \n1. pizza RS239\n2. burger RS129\n3. pasta RS179\n4. frenchfries RS99\n5. sandwich RS149\n");
	//2. read their choice
	int choice=0;
	scanf("%d",&choice);
	//3. display based on their choice
	
	switch(choice)
	{
		case 1:
			printf("you picked pizza RS239,");
			break;
		case 2:
		    printf("you picked burger RS129,");
		    break;
		case 3:
			printf("you picked pasta RS179,");
			break;
		case 4:
			printf("you picked frenchfries RS99,");
			break;
		case 5:
			printf("you picked sandwich RS149,");
			break;
		default : printf("invalid choice");	
	}
}
